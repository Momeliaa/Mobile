<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnKorean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="한식"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnChinese"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btnChinese"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="중식"
        app:layout_constraintTop_toBottomOf="@id/btnKorean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnJapanese"/>

    <Button
        android:id="@+id/btnJapanese"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일식"
        app:layout_constraintTop_toBottomOf="@id/btnChinese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnWestern"/>

    <Button
        android:id="@+id/btnWestern"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="양식"
        app:layout_constraintTop_toBottomOf="@id/btnJapanese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBack"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="뒤로 가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>